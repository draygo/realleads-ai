run = "npm run dev"
entrypoint = "backend/src/server.ts"
hidden = [".config", "package-lock.json"]
modules = ["nodejs-20"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "npm run build && npm run dev:server"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 4000
externalPort = 4200

[[ports]]
localPort = 5173
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8787
externalPort = 3001

[[ports]]
localPort = 8788
externalPort = 3002

[[ports]]
localPort = 8789
externalPort = 3003

[[ports]]
localPort = 45121
externalPort = 5000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "backend"

[[workflows.workflow]]
name = "backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start-backend.sh"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"
