# ============================================================================
# RealLeads.ai Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values.
# Never commit .env to git - it's in .gitignore

# ----------------------------------------------------------------------------
# DATABASE - Supabase Postgres
# ----------------------------------------------------------------------------
# Get from: Supabase Dashboard → Project Settings → Database
# Format: postgresql://postgres:[password]@[host]:[port]/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Supabase connection pooler (optional, recommended for production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ----------------------------------------------------------------------------
# AUTHENTICATION - Supabase
# ----------------------------------------------------------------------------
# JWT secret for verifying Supabase tokens
# Get from: Supabase Dashboard → Project Settings → API → JWT Secret
SUPABASE_JWT_SECRET=your-jwt-secret

# ----------------------------------------------------------------------------
# AI / ORCHESTRATION - OpenAI
# ----------------------------------------------------------------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Model to use for orchestration (gpt-4o, gpt-4-turbo, gpt-3.5-turbo)
ORCHESTRATOR_MODEL=gpt-4o

# ----------------------------------------------------------------------------
# COMMUNICATIONS - Twilio (Optional - for SMS/WhatsApp)
# ----------------------------------------------------------------------------
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_SMS_NUMBER=+1234567890

# ----------------------------------------------------------------------------
# COMMUNICATIONS - Mailchimp / Mandrill (Optional - for Email)
# ----------------------------------------------------------------------------
# Get from: https://mandrillapp.com/settings
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_SERVER_PREFIX=us1
MANDRILL_API_KEY=your-mandrill-api-key

# Mandrill "From" configuration
MANDRILL_FROM_MODE=single
MANDRILL_FROM_EMAIL=draygo@gmail.com
MANDRILL_REPLY_TO=draygo@gmail.com

# Email configuration
DIGEST_RECIPIENT_EMAIL=draygo@gmail.com
MAILCHIMP_AUDIENCE_ID_DEFAULT=your-audience-id

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
# Backend server port
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Application base URL (for callbacks, webhooks, etc.)
APP_BASE_URL=https://realleads-backend.draygo.repl.co

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,https://realleads-ai.draygo.repl.co

# Timezone for scheduling and date operations
TIMEZONE=America/New_York

# ----------------------------------------------------------------------------
# LOGGING & MONITORING
# ----------------------------------------------------------------------------
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable JSON logging (for production)
LOG_JSON=false